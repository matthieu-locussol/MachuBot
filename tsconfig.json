{
    "compilerOptions": {
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2019",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "es2019",
        "allowJs": false,
        "noEmit": false,
        "moduleResolution": "node",
        "isolatedModules": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
